<div id="exhibitions" class="container">
  <h1 id="exhibit-head">Exhibitions in Los Angeles</h1>

  <div id="exhibition-container" class="container">
    <% @exhibitions.each do |exhibition| %>

      <div id="<%= exhibition.name %>">
        <h3 class="exhibition-name"><%= exhibition.name %></h3>

        <div  class="row display-container">
          <div class="col-xs-6 col-md-4">
            <%= link_to 'Edit', edit_gallery_artist_exhibition_path(exhibition.gallery, exhibition.artist, exhibition) if current_user %>
            <%= exhibition.image.nil? ? image_tag(exhibition.photo.url(:thumb)) : image_tag(exhibition.image) %>
          </div>
          <div class="col-xs-6 col-md-4">
            <table id="gallery-artist">
              <tr><td><%= link_to "#{exhibition.gallery.name}", "/galleries##{exhibition.gallery.name}"%></td></tr>
              <tr id="<%=exhibition.artist.name%>"><td><%= "Artist: #{exhibition.artist.name}" %></td></tr>
              <tr></tr>
            </table>
          </div><!-- info-container -->
          <div class="col-xs-6 col-md-4">
            <table id="opening-closing">
              <tr><td><%= "Opening: #{exhibition.opening}" %></td></tr>
              <tr><td><%= "Closing: #{exhibition.closing}" %></td></tr>
              <tr></tr>
            </table>
            <div id="more-button">
              <p>
                <% unless exhibition.description.nil? %>
                  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#exb<%=exhibition.id%>" aria-expanded="false" aria-controls="collapseExample">More Info</button>
                <% end %>
              </p>
              <div class="collapse" id="exb<%=exhibition.id%>">
                <div class="card card-block">
                  <%= exhibition.description %>
                </div>
              </div><!-- exhb id -->
            </div><!-- more-button -->
          </div>
        </div><!-- row display-container -->

      </div><!-- exhibition-id -->
    <% end %>
  </div><!-- exhibition-container -->

</div><!-- exhibition container-->

<hr>
